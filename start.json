{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "venv": "venv",
        "env": {
          "PYTHONUNBUFFERED": "1"
        },
        "message": "python app.py",
        "on": [{
          "event": "/.*/",
          "return": true
        }]
      }
    },
    {
      "method": "local.set",
      "params": {
        "url": "http://localhost:4879"
      }
    },
    {
      "method": "browser.open",
      "params": {
        "uri": "{{local.url}}"
      }
    }
  ]
}
