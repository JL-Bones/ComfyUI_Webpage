{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": "python -m venv venv"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "{{platform==='win32' ? '.\\\\venv\\\\Scripts\\\\python.exe' : './venv/bin/python'}} -m pip install --upgrade pip"
      }
    },
    {
      "method": "shell.run",
      "params": {
        "message": "{{platform==='win32' ? '.\\\\venv\\\\Scripts\\\\python.exe' : './venv/bin/python'}} -m pip install flask"
      }
    },
    {
      "method": "fs.link",
      "params": {
        "venv": "venv"
      }
    },
    {
      "method": "notify",
      "params": {
        "html": "Installation complete! Make sure ComfyUI is running on http://127.0.0.1:8188 before starting the web interface."
      }
    }
  ]
}
